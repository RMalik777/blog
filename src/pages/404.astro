---
import { buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Page Not Found" desc="404 error, page not found">
  <main class="-mt-14 flex min-h-dvh flex-col items-start justify-center gap-4">
    <h1
      class="bg-gradient-to-b from-indigo-500 to-fuchsia-500 bg-clip-text text-5xl font-medium tracking-tighter text-transparent duration-200 ease-out xs:bg-gradient-to-r lg:text-6xl">
      <span class="font-mono font-semibold tracking-normal">404|</span><wbr />Page Not Found
    </h1>
    <a class={buttonVariants({ variant: "outline" })} href="/">Go Back Home</a>
  </main>
</Layout>
