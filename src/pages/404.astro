---
import { buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Page Not Found" desc="404 error, page not found">
	<main class="-mt-14 flex min-h-dvh flex-col items-start justify-center gap-4">
		<h1
			class="xs:bg-gradient-to-r xs:py-4 bg-linear-to-b from-indigo-500 to-fuchsia-500 bg-clip-text py-1 text-5xl leading-none font-medium tracking-tighter text-transparent duration-200 ease-out lg:text-6xl"
		>
			<span class="font-mono font-semibold tracking-normal">404|</span><wbr />Page Not Found
		</h1>
		<a class={buttonVariants({ variant: "outline" })} href="/">Go Back Home</a>
	</main>
</Layout>
