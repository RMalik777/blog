---
import { Image } from "astro:assets";
import AstroLogo from "@/assets/astro-logo-light-gradient.svg";
import SanityLogo from "@/assets/sanity-logotype--white-on-black.svg";
import { SquareArrowOutUpRight } from "lucide-react";

import SelfPortrait from "@/assets/photosquarezoom.webp";

const backLink = [
  {
    title: "Explore",
    children: [
      {
        title: "Home",
        href: "/",
      },
      {
        title: "About",
        href: "/about",
      },
    ],
  },
  {
    title: "Social",
    children: [
      {
        title: "GitHub",
        href: "https://github.com/RMalik777",
      },
      {
        title: "LinkedIn",
        href: "https://www.linkedin.com/in/raflimalik/",
      },
      {
        title: "Instagram",
        href: "https://www.instagram.com/raflimalik__/",
      },
      {
        title: "Unsplash",
        href: "https://unsplash.com/@raflimalik",
      },
    ],
  },
  {
    title: "Contact",
    children: [
      {
        title: "Email",
        href: "mailto:Rafli.Malik@gmail.com",
      },
      {
        title: "Discord",
        href: "https://discord.com/users/432877551640117249",
      },
    ],
  },
];
---

<footer
  class="flex w-full flex-col items-center justify-center border-neutral-700 bg-neutral-950 text-neutral-50 dark:border-t-2">
  <div
    class="flex w-full flex-col items-start justify-between px-4 py-6 xs:flex-row xs:items-center xs:px-6 xs:py-8 sm:px-8 sm:py-8 md:py-10 lg:py-12">
    <div class="flex flex-col items-start justify-start gap-2 sm:flex-row sm:gap-8 lg:gap-16">
      {
        backLink.map((link) => (
          <div class="flex flex-col items-start gap-1">
            <p class="text-xl font-medium tracking-tight">{link.title}</p>
            <ul>
              {link.children.map((child) => (
                <li>
                  <a href={child.href} class="tracking-tight text-purple-400 hover:text-purple-500 hover:underline">
                    {child.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <a
      class="hidden text-xl lg:text-2xl font-medium tracking-tighter text-purple-400 hover:text-purple-500 hover:underline xs:block"
      href="http://raflimalik.com"
      target="_blank">Rafli Malik | 2024</a
    >
  </div>
  <div class="flex w-full flex-col items-start gap-1 px-4 text-left text-base tracking-tight xs:px-6 sm:px-8">
    <a
      class="block tracking-tighter text-purple-400 hover:text-purple-500 hover:underline xs:hidden"
      href="http://raflimalik.com"
      target="_blank">Rafli Malik | 2024</a
    >
    <hr class="w-full border-neutral-500" />
    <p class="w-full">
      This website is licensed under
      <a
        class="text-purple-400 hover:text-purple-500 hover:underline"
        href="https://creativecommons.org/licenses/by/4.0/"
        target="_blank"
        rel="noopener noreferrer">
        Creative Commons Attribution 4.0 International
        <SquareArrowOutUpRight className="inline-block align-middle" size={14} />
      </a>
      license
    </p>
    <p class="w-full">
      The source code for this website is available on
      <a
        class="text-purple-400 hover:text-purple-500 hover:underline"
        href="https://github.com/RMalik777/blog"
        target="_blank"
        rel="noopener noreferrer">
        GitHub
        <SquareArrowOutUpRight className="inline-block align-middle" size={14} />
      </a>
      under the
      <a
        class="text-purple-400 hover:text-purple-500 hover:underline"
        href="https://github.com/RMalik777/blog/blob/main/LICENSE-CODE"
        target="_blank"
        rel="noopener noreferrer">
        MIT LICENSE
        <SquareArrowOutUpRight className="inline-block align-middle" size={14} />
      </a>
    </p>
  </div>
  <div class="flex w-full flex-col items-center justify-center gap-1 bg-black p-2 py-4 text-white xs:flex-row">
    <p>Built with</p>
    <div class="flex w-full flex-row flex-wrap items-center justify-center xs:w-fit xs:flex-nowrap">
      <a href="https://astro.build" target="_blank" rel="noopener noreferrer">
        <Image src={AstroLogo} alt="Astro Logo" class="h-8 w-auto min-w-min xs:h-12" />
      </a>
      <p class="hidden xs:block">+</p>
      <a href="https://sanity.io" target="_blank" rel="noopener noreferrer">
        <Image src={SanityLogo} alt="Astro Logo" class="h-6 w-auto min-w-min xs:h-10" />
      </a>
    </div>
  </div>
</footer>
